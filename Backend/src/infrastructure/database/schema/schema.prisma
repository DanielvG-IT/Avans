datasource db {
    provider = "mysql"
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

enum Role {
  ADMIN
  TEACHER
  USER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
