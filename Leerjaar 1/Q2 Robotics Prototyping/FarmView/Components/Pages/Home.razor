@page "/"
@inject SimpleMqtt.SimpleMqttClient MQttClient

<PageTitle>Robot Data</PageTitle>

<p>This page will display data about the robots.</p>

<table class="table table-striped table-bordered" style="justify-content: center;">
  <thead>
    <tr>
      <th>Message</th>
      <th>Topic</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var m in MessageList)
    {
      <tr>
        <td>@m.messageInhoud</td>
        <td>@m.MqttTopic</td>
      </tr>
    }
  </tbody>
</table>

@code {

  private List<Message> MessageList = new List<Message>();

  protected override async Task OnInitializedAsync()
  {
    await MQttClient.SubscribeToTopic("CropBotics/#");

    MQttClient.OnMessageReceived += (sender, args) =>
    {
      var message = new Message
        {
          messageInhoud = args.Message,
          MqttTopic = args.Topic
        };
      MessageList.Add(message);

      InvokeAsync(StateHasChanged);
    };

  }

  private class Message
  {
    public string? messageInhoud;
    public string? MqttTopic;
  }
}
