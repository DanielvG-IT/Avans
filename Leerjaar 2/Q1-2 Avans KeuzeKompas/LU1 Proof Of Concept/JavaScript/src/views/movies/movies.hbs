<style>
  .filter-card {
    background: #1c1c1c;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 12px rgba(0, 0, 0, .35);
  }

  .movie-card-grid {
    background: #1c1c1c;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    overflow: hidden;
    transition: transform .2s ease, box-shadow .2s ease;
  }

  .movie-card-grid:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, .45);
  }

  .movie-card-grid .card-body {
    padding: .9rem;
  }

  .movie-card-grid h6 {
    font-size: .95rem;
    font-weight: 600;
    color: #fff;
  }

  .movie-badge {
    font-size: .75rem;
    border-radius: 6px;
  }

  .pagination .page-link {
    background: #1c1c1c;
    border: 1px solid #2a2a2a;
    color: #ddd;
  }

  .pagination .page-item.active .page-link {
    background: #0d6efd;
    border-color: #0d6efd;
    color: #fff;
  }

  .pagination .page-link:hover {
    background: #2a2a2a;
    color: #fff;
  }

  .bg-orange {
    background-color: #fd7e14 !important;
  }
</style>

<div class="container py-4">

  <!-- Page Title -->
  <h2 class="mb-4 text-light">Movies</h2>

  <!-- Filters -->
  <div class="filter-card">
    <form method="GET">
      <div class="row g-3 align-items-center">

        <!-- Search -->
        <div class="col-12 col-md-4">
          <input type="text" id="search" name="search" value="{{search}}" class="form-control"
            placeholder="Search movies..." aria-label="Search movies by title">
        </div>

        <!-- Category -->
        <div class="col-6 col-md-3">
          <select id="category" name="category" class="form-select" aria-label="Filter by category">
            <option value="">All Categories</option>
            {{#each categories}}
            <option value="{{this}}" {{#ifEquals ../category this}}selected{{/ifEquals}}>{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Rating -->
        <div class="col-6 col-md-2">
          <select id="rating" name="rating" class="form-select" aria-label="Filter by rating">
            <option value="">All Ratings</option>
            {{#each ratings}}
            <option value="{{this}}" {{#ifEquals ../rating this}}selected{{/ifEquals}}>{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Sort -->
        <div class="col-12 col-md-3">
          <select id="sort" name="sort" class="form-select" aria-label="Sort movies">
            <option value="title,asc" {{#ifEquals sort "title,asc" }}selected{{/ifEquals}}>Title A–Z</option>
            <option value="title,desc" {{#ifEquals sort "title,desc" }}selected{{/ifEquals}}>Title Z–A</option>
            <option value="year,asc" {{#ifEquals sort "year,asc" }}selected{{/ifEquals}}>Year (Old → New)</option>
            <option value="year,desc" {{#ifEquals sort "year,desc" }}selected{{/ifEquals}}>Year (New → Old)</option>
            <option value="length,asc" {{#ifEquals sort "length,asc" }}selected{{/ifEquals}}>Length (Short → Long)
            </option>
            <option value="length,desc" {{#ifEquals sort "length,desc" }}selected{{/ifEquals}}>Length (Long → Short)
            </option>
            <option value="rate,asc" {{#ifEquals sort "rate,asc" }}selected{{/ifEquals}}>Rate (Low → High)</option>
            <option value="rate,desc" {{#ifEquals sort "rate,desc" }}selected{{/ifEquals}}>Rate (High → Low)</option>
          </select>
        </div>

        <!-- Buttons -->
        <div class="col-12 d-flex flex-wrap gap-2">
          <button type="submit" class="btn btn-primary flex-grow-1 flex-md-grow-0">Apply</button>
          <a href="/movies" class="btn btn-outline-secondary flex-grow-1 flex-md-grow-0">Clear</a>
          {{#if (eq user.role "STAFF")}}
          <a href="/movies/new" class="btn btn-success ms-md-auto">Add Movie</a>
          {{/if}}
        </div>
      </div>

      <!-- Movie Count -->
      <div class="mt-3">
        {{#if movies.length}}
        <div class="text-light">Showing {{movies.length}} of {{total}} movies</div>
        {{else}}
        <div class="alert alert-warning mb-0">No movies found matching your criteria.</div>
        {{/if}}
      </div>
    </form>
  </div>

  <!-- Movies Grid -->
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    {{#each movies}}
    <div class="col">
      <a href="/movies/{{filmId}}" class="text-decoration-none">
        <div class="movie-card-grid h-100">

          <!-- Poster -->
          {{#if coverUrl}}
          <img src="{{coverUrl}}" alt="{{title}}" class="card-img-top" style="object-fit: cover; aspect-ratio: 2/3;"
            loading="lazy">
          {{else}}
          <div class="bg-secondary d-flex align-items-center justify-content-center" style="aspect-ratio: 2/3;">
            <span class="text-muted">No image</span>
          </div>
          {{/if}}

          <!-- Info -->
          <div class="card-body d-flex flex-column">
            <h6 class="mb-2 text-truncate" title="{{title}}">{{title}}</h6>

            <div class="d-flex align-items-center gap-2 mb-2 flex-wrap">
              {{#if category}}
              <span class="badge bg-info text-dark movie-badge text-truncate"
                style="max-width:8rem;">{{category}}</span>
              {{/if}}

              <span class="badge movie-badge
                {{#if (eq rating " G")}}bg-success{{else if (eq rating "PG" )}}bg-warning text-dark {{else if (eq
                rating "PG-13" )}}bg-orange text-dark{{else if (eq rating "R" )}}bg-danger {{else if (eq rating "NC-17"
                )}}bg-dark{{else}}bg-secondary{{/if}}">
                {{#if rating}}{{rating}}{{else}}PG-18{{/if}}
              </span>

              <small class="text-light ms-auto">{{releaseYear}}</small>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-auto">
              <small class="text-light">{{#if length}}{{length}} min{{else}}—{{/if}}</small>
              <span class="btn btn-sm btn-outline-primary">View</span>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>

  <!-- Pagination -->
  <nav aria-label="Movies pagination" class="mt-4">
    <!-- Mobile simple -->
    <div class="d-flex d-sm-none justify-content-between align-items-center">
      {{#if prevPage}}
      <a class="btn btn-outline-primary btn-sm" href="{{pageQueryPrefix}}{{prevPage}}">Prev</a>
      {{else}}
      <span class="btn btn-outline-secondary btn-sm disabled">Prev</span>
      {{/if}}

      <small class="text-light">
        Page {{#each pagesToShow}}{{#if this.active}}{{this.page}}{{/if}}{{/each}} of {{totalPages}}
      </small>

      {{#if nextPage}}
      <a class="btn btn-outline-primary btn-sm" href="{{pageQueryPrefix}}{{nextPage}}">Next</a>
      {{else}}
      <span class="btn btn-outline-secondary btn-sm disabled">Next</span>
      {{/if}}
    </div>

    <!-- Desktop pagination -->
    <ul class="pagination justify-content-center flex-wrap d-none d-sm-flex mt-3">
      <li class="page-item {{#unless prevPage}}disabled{{/unless}}">
        {{#if prevPage}}
        <a class="page-link" href="{{pageQueryPrefix}}{{prevPage}}">Previous</a>
        {{else}}
        <span class="page-link">Previous</span>
        {{/if}}
      </li>

      {{#each pagesToShow}}
      {{#if this.ellipsis}}
      <li class="page-item disabled"><span class="page-link">…</span></li>
      {{else}}
      <li class="page-item {{#if this.active}}active{{/if}}">
        {{#if this.active}}
        <span class="page-link">{{this.page}}</span>
        {{else}}
        <a class="page-link" href="{{../pageQueryPrefix}}{{this.page}}">{{this.page}}</a>
        {{/if}}
      </li>
      {{/if}}
      {{/each}}

      <li class="page-item {{#unless nextPage}}disabled{{/unless}}">
        {{#if nextPage}}
        <a class="page-link" href="{{pageQueryPrefix}}{{nextPage}}">Next</a>
        {{else}}
        <span class="page-link">Next</span>
        {{/if}}
      </li>
    </ul>
  </nav>
</div>