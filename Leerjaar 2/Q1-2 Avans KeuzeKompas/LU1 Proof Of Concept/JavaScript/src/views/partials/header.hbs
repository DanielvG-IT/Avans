      <img src="/images/eject!-logo-text.png" height="35" alt="Eject! Logo" />
    </a>

    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/movies">Movies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
        {{#if user}}
        {{#if user.role}}
        {{#if (eq user.role 'CUSTOMER')}}
        <li class="nav-item">
          <a class="nav-link" href="/customer">Dashboard</a>
        </li>
        {{/if}}
        {{#if (eq user.role 'STAFF')}}
        <li class="nav-item">
          <a class="nav-link" href="/staff">Dashboard</a>
        </li>
        {{/if}}
        {{/if}}
        {{/if}}
      </ul>

      <!-- Desktop Login/Profile -->
      <div class="d-none d-lg-flex align-items-center">
        {{#if user}}
        <div class="dropdown">
          <a href="#" class="btn btn-outline-light btn-sm rounded-pill d-flex align-items-center"
            data-bs-toggle="dropdown">
            {{#if user.profileImage}}
            <img src="{{user.profileImage}}" class="profile-img me-2" alt="Profile" />
            {{else}}
            <i class="bi bi-person-circle me-2 fs-5"></i>
            {{/if}}
            Profile
          </a>
          <ul class="dropdown-menu dropdown-menu-end mt-2">
            <li><a class="dropdown-item" href="/auth/profile">My Profile</a></li>
