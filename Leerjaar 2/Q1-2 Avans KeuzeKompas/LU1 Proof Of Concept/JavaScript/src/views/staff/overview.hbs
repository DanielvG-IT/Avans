<div class="container my-5" style="max-width: 1000px;">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <div>
      <h2 class="mb-1 text-light">
        <i class="bi bi-briefcase-fill me-2"></i> Staff Actions
      </h2>
      <p class="mb-0 text-gray">Quick actions for store staff.</p>
    </div>
  </div>

  <style>
    .action-card {
      transition: transform .15s ease, box-shadow .15s ease;
      border: none;
      border-radius: .5rem;
    }

    .action-card:hover,
    .action-card:focus {
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 12px 24px rgba(0, 0, 0, .15);
      text-decoration: none;
    }

    .action-icon {
      width: 60px;
      height: 60px;
      font-size: 1.3rem;
      flex: 0 0 60px;
    }

    .action-desc {
      font-size: .95rem;
    }

    .coming-soon-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 20;
      display: flex;
      align-items: center;
      justify-content: center;
      pointer-events: none;
      color: #6c757d;
      font-weight: 700;
      text-transform: uppercase;
      font-size: .85rem;
      letter-spacing: .06em;
      background: rgba(248, 249, 250, 0.9);
      border-radius: .5rem;
      backdrop-filter: blur(2px);
    }

    .card.action-card.coming-soon {
      filter: grayscale(.05);
      position: relative;
    }

    .card.action-card.coming-soon>* {
      pointer-events: none;
    }

    @media (max-width: 575.98px) {
      .action-icon {
        width: 50px;
        height: 50px;
        font-size: 1.1rem;
      }
    }
  </style>

  <div class="row g-3">
    <!-- Left: Single Coming Soon card -->
    <div class="col-12 col-md-6 d-flex">
      <div
        class="card action-card coming-soon p-3 text-decoration-none text-reset d-flex align-items-center gap-3 w-100 h-100"
        role="group" aria-disabled="true" tabindex="-1" aria-label="Store Dashboard - Coming Soon">
        <div class="bg-success text-white rounded action-icon d-flex align-items-center justify-content-center">
          <i class="bi bi-graph-up-arrow"></i>
        </div>
        <div class="flex-grow-1">
          <div class="d-flex align-items-start justify-content-between mb-1">
            <div class="fw-semibold text-dark">View Store Dashboard</div>
            <span class="badge bg-light text-dark align-self-start">Metrics</span>
          </div>
          <div class="action-desc text-muted">See key store metrics, sales trends, and staff KPIs.</div>
        </div>
        <div class="coming-soon-overlay" aria-hidden="true">Coming Soon</div>
      </div>
    </div>

    <!-- Right: Two stacked action cards -->
    <div class="col-12 col-md-6 d-flex flex-column gap-3">
      <a href="/movies"
        class="card action-card p-3 text-decoration-none text-reset d-flex align-items-center gap-3 h-100" role="button"
        tabindex="0" aria-label="Manage Movies">
        <div class="bg-warning text-dark rounded action-icon d-flex align-items-center justify-content-center">
          <i class="bi bi-film"></i>
        </div>
        <div class="flex-grow-1">
          <div class="d-flex align-items-start justify-content-between mb-1">
            <div class="fw-semibold text-dark">Manage Movies</div>
            <span class="badge bg-warning bg-opacity-10 text-warning">Catalog</span>
          </div>
          <div class="action-desc text-muted">Browse movie entries in the catalog with metadata.</div>
        </div>
      </a>

      <a href="/staff/crm"
        class="card action-card p-3 text-decoration-none text-reset d-flex align-items-center gap-3 h-100" role="button"
        tabindex="0" aria-label="Manage Customers">
        <div class="bg-secondary text-white rounded action-icon d-flex align-items-center justify-content-center">
          <i class="bi bi-people-fill"></i>
        </div>
        <div class="flex-grow-1">
          <div class="d-flex align-items-start justify-content-between mb-1">
            <div class="fw-semibold text-dark">Manage Customers</div>
            <span class="badge bg-secondary bg-opacity-10 text-secondary">CRM</span>
          </div>
          <div class="action-desc text-muted">Search or edit customer profiles, view purchase history.</div>
        </div>
      </a>
    </div>
  </div>
</div>