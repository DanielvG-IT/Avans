<div class="container py-4">

  <!-- Page Title -->
  <h2 class="mb-4">Movies</h2>

  <!-- Movie Filters / Search / Sorting -->
  <form method="GET" class="mb-3">
    <div class="row g-2 align-items-center">

      <!-- Search Box -->
      <div class="col-12 col-md-4">
        <label for="search" class="form-label visually-hidden">Search by title</label>
        <input type="text" id="search" name="search" value="{{search}}" class="form-control"
          placeholder="Search by title..." aria-label="Search movies by title">
      </div>

      <!-- Category Filter -->
      <div class="col-6 col-md-3">
        <label for="category" class="form-label visually-hidden">Filter by category</label>
        <select id="category" name="category" class="form-select" aria-label="Filter by category">
          <option value="">All Categories</option>
          {{#each categories}}
          <option value="{{this}}" {{#ifEquals ../category this}}selected{{/ifEquals}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Rating Filter -->
      <div class="col-6 col-md-2">
        <label for="rating" class="form-label visually-hidden">Filter by rating</label>
        <select id="rating" name="rating" class="form-select" aria-label="Filter by rating">
          <option value="">All Ratings</option>
          {{#each ratings}}
          <option value="{{this}}" {{#ifEquals ../rating this}}selected{{/ifEquals}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Sort Dropdown -->
      <div class="col-6 col-md-2">
        <label for="sort" class="form-label visually-hidden">Sort movies</label>
        <select id="sort" name="sort" class="form-select" aria-label="Sort movies">
          <option value="title,asc" {{#ifEquals sort "title,asc" }}selected{{/ifEquals}}>Title A–Z</option>
          <option value="title,desc" {{#ifEquals sort "title,desc" }}selected{{/ifEquals}}>Title Z–A</option>
          <option value="year,asc" {{#ifEquals sort "year,asc" }}selected{{/ifEquals}}>Release Year (Old → New)</option>
          <option value="year,desc" {{#ifEquals sort "year,desc" }}selected{{/ifEquals}}>Release Year (New → Old)
          </option>
          <option value="length,asc" {{#ifEquals sort "length,asc" }}selected{{/ifEquals}}>Length (Shortest → Longest)
          </option>
          <option value="length,desc" {{#ifEquals sort "length,desc" }}selected{{/ifEquals}}>Length (Longest → Shortest)
          </option>
          <option value="rate,asc" {{#ifEquals sort "rate,asc" }}selected{{/ifEquals}}>Rental Rate (Low → High)</option>
          <option value="rate,desc" {{#ifEquals sort "rate,desc" }}selected{{/ifEquals}}>Rental Rate (High → Low)
          </option>
        </select>
      </div>

      <!-- Apply / Clear Buttons -->
      <div class="col-6 col-md-auto d-flex gap-2">
        <button type="submit" class="btn btn-primary flex-grow-1">Apply</button>
        <a href="/movies" class="btn btn-secondary flex-grow-1">Clear</a>
      </div>

    </div>
  </form>

  <!-- Movies Grid -->
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    {{#each movies}}
    <div class="col">
      <a href="/movies/{{filmId}}" class="text-decoration-none text-dark">
        <div class="card h-100 shadow-sm">

          <!-- Poster -->
          {{#if coverUrl}}
          <img src="{{coverUrl}}" alt="{{title}}" class="card-img-top" style="object-fit: cover; aspect-ratio: 2/3;">
          {{else}}
          <div class="bg-secondary d-flex align-items-center justify-content-center" style="aspect-ratio: 2/3;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 96" role="img" aria-labelledby="no-image-title"
              class="w-50 h-auto" focusable="false">
              <title id="no-image-title">No image available</title>

              <!-- card background -->
              <rect x="2" y="6" width="60" height="84" rx="4" fill="#f5f5f7" stroke="#dcdcdc"></rect>

              <!-- film strip header (clapper style) -->
              <g transform="translate(6,10)">
                <rect x="0" y="0" width="52" height="14" rx="2" fill="#e9eef6"></rect>
                <g fill="#c4d0e9">
                  <rect x="2" y="2" width="6" height="10" rx="1"></rect>
                  <rect x="12" y="2" width="6" height="10" rx="1"></rect>
                  <rect x="22" y="2" width="6" height="10" rx="1"></rect>
                  <rect x="32" y="2" width="6" height="10" rx="1"></rect>
                  <rect x="42" y="2" width="6" height="10" rx="1"></rect>
                </g>
              </g>

              <!-- film window -->
              <rect x="10" y="28" width="44" height="52" rx="2" fill="#ffffff"></rect>
              <g transform="translate(10,28)">
                <!-- left sprocket holes -->
                <g fill="#e6e6e6">
                  <rect x="-6" y="6" width="6" height="6" rx="1"></rect>
                  <rect x="-6" y="22" width="6" height="6" rx="1"></rect>
                  <rect x="-6" y="38" width="6" height="6" rx="1"></rect>
                </g>

                <!-- right sprocket holes -->
                <g transform="translate(44,0)" fill="#e6e6e6">
                  <rect x="6" y="6" width="6" height="6" rx="1"></rect>
                  <rect x="6" y="22" width="6" height="6" rx="1"></rect>
                  <rect x="6" y="38" width="6" height="6" rx="1"></rect>
                </g>

                <!-- simple artwork: mountain + sun -->
                <g transform="translate(4,6)">
                  <polygon points="8,36 20,8 32,36" fill="#d0d7ef"></polygon>
                  <circle cx="26" cy="14" r="6" fill="#ffd580"></circle>
                  <rect x="0" y="36" width="44" height="6" fill="#f0f2fa"></rect>
                </g>

                <!-- play button to indicate media -->
                <g transform="translate(12,16)">
                  <circle cx="10" cy="10" r="10" fill="#d9e3ff" opacity="0.95"></circle>
                  <polygon points="14,10 8,14 8,6" fill="#6b7aa6"></polygon>
                </g>
              </g>

              <!-- label -->
              <text x="32" y="88" font-family="Helvetica, Arial, sans-serif" font-size="8" fill="#6c757d"
                text-anchor="middle">
                No image
              </text>
            </svg>
          </div>
          {{/if}}

          <!-- Card Body -->
          <div class="card-body p-3 d-flex flex-column" style="min-height:110px;">
            <h6 class="card-title mb-2 text-truncate" title="{{title}}">{{title}}</h6>

            <div class="d-flex align-items-center gap-2 mb-2 flex-wrap w-100">
              {{#if category}}
              <span class="badge bg-info text-dark small text-truncate" style="max-width:8rem;">{{category}}</span>
              {{/if}}

              <span class="badge small
                {{#if (eq rating " G")}}bg-success {{else if (eq rating "PG" )}}bg-warning text-dark {{else if (eq
                rating "PG-13" )}}bg-orange text-dark {{else if (eq rating "R" )}}bg-danger {{else if (eq rating "NC-17"
                )}}bg-dark {{else}}bg-secondary{{/if}}">
                {{#if rating}}{{rating}}{{else}}PG-18{{/if}}
              </span>


              <div class="ms-auto text-end">
                <small class="text-muted d-block">{{releaseYear}}</small>
              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-auto">
              <div class="d-flex gap-2 align-items-center">
                {{#if length}}<small class="text-muted">{{length}} min</small>{{else}}<small
                  class="text-muted">—</small>{{/if}}
              </div>

              <!-- Outer anchor wraps the whole card, keep this as a visual action -->
              <span class="btn btn-sm btn-outline-primary">View</span>
            </div>
          </div>

        </div>
      </a>
    </div>
    {{/each}}
  </div>

  <!-- Pagination -->
  <nav aria-label="Movies pagination" class="mt-4">
    <ul class="pagination justify-content-center">
      <li class="page-item {{#ifEquals page 1}}disabled{{/ifEquals}}">
        {{#ifEquals page 1}}<span class="page-link">Previous</span>{{else}}
        <a class="page-link"
          href="?search={{search}}&category={{category}}&sort={{sort}}&page={{subtract page 1}}">Previous</a>{{/ifEquals}}
      </li>

      {{#each (range 1 totalPages)}}
      <li class="page-item {{#ifEquals ../page this}}active{{/ifEquals}}">
        {{#ifEquals ../page this}}
        <span class="page-link" aria-current="page">{{this}}<span class="visually-hidden">(current)</span></span>
        {{else}}
        <a class="page-link"
          href="?search={{../search}}&category={{../category}}&sort={{../sort}}&page={{this}}">{{this}}</a>
        {{/ifEquals}}
      </li>
      {{/each}}

      <li class="page-item {{#ifEquals page totalPages}}disabled{{/ifEquals}}">
        {{#ifEquals page totalPages}}<span class="page-link">Next</span>{{else}}
        <a class="page-link"
          href="?search={{search}}&category={{category}}&sort={{sort}}&page={{add page 1}}">Next</a>{{/ifEquals}}
      </li>
    </ul>
  </nav>
</div>
<style>
  .bg-orange {
    background-color: #fd7e14;
  }
</style>