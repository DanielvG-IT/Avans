<div class="container py-4">

  <!-- Page Title -->
  <h2 class="mb-4">Movies</h2>

  <!-- Filters / Search / Sorting -->
  <form method="GET" class="row g-2 mb-3 align-items-center">
    <!-- Search -->
    <div class="col-12 col-sm-6 col-md-4">
      <input type="text" name="search" value="{{search}}" class="form-control" placeholder="Search by title...">
    </div>

    <!-- Category -->
    <div class="col-6 col-sm-3 col-md-2">
      <select name="category" class="form-select">
        <option value="">All Categories</option>
        {{#each categories}}
        <option value="{{this}}" {{#ifEquals ../category this}}selected{{/ifEquals}}>{{this}}</option>
        {{/each}}
      </select>
    </div>

    <!-- Sort -->
    <div class="col-6 col-sm-3 col-md-2">
      <select name="sort" class="form-select">
        <option value="title,asc" {{#ifEquals sort "title,asc" }}selected{{/ifEquals}}>Title A–Z</option>
        <option value="title,desc" {{#ifEquals sort "title,desc" }}selected{{/ifEquals}}>Title Z–A</option>
        <option value="year,asc" {{#ifEquals sort "year,asc" }}selected{{/ifEquals}}>Release Year (Old → New)</option>
        <option value="year,desc" {{#ifEquals sort "year,desc" }}selected{{/ifEquals}}>Release Year (New → Old)</option>
        <option value="length,asc" {{#ifEquals sort "length,asc" }}selected{{/ifEquals}}>Length (Shortest → Longest)
        </option>
        <option value="length,desc" {{#ifEquals sort "length,desc" }}selected{{/ifEquals}}>Length (Longest → Shortest)
        </option>
        <option value="rate,asc" {{#ifEquals sort "rate,asc" }}selected{{/ifEquals}}>Rental Rate (Low → High)</option>
        <option value="rate,desc" {{#ifEquals sort "rate,desc" }}selected{{/ifEquals}}>Rental Rate (High → Low)</option>
      </select>
    </div>

    <!-- Submit -->
    <div class="col-12 col-md-auto">
      <button type="submit" class="btn btn-primary w-100">Apply</button>
    </div>
  </form>

  <!-- Movies Grid -->
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    {{#each movies}}
    <div class="col">
      <a href="/movies/{{filmId}}" class="text-decoration-none text-dark">
        <div class="card h-100 shadow-sm">

          <!-- Poster -->
          {{#if coverUrl}}
          <img src="{{coverUrl}}" alt="{{title}}" class="card-img-top" style="object-fit: cover; aspect-ratio: 2/3;">
          {{else}}
          <div class="bg-secondary d-flex align-items-center justify-content-center" style="aspect-ratio: 2/3;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 96" role="img" aria-label="No image available"
              class="w-50 h-auto">
              <rect x="2" y="6" width="60" height="84" rx="4" fill="#f0f0f0" stroke="#d1d1d1" />
              <g fill="#d6d6d6">
                <rect x="6" y="12" width="6" height="8" rx="1" />
                <rect x="6" y="28" width="6" height="8" rx="1" />
                <rect x="6" y="44" width="6" height="8" rx="1" />
                <rect x="6" y="60" width="6" height="8" rx="1" />
                <rect x="52" y="12" width="6" height="8" rx="1" />
                <rect x="52" y="28" width="6" height="8" rx="1" />
                <rect x="52" y="44" width="6" height="8" rx="1" />
                <rect x="52" y="60" width="6" height="8" rx="1" />
              </g>
              <rect x="14" y="16" width="36" height="64" rx="2" fill="#ffffff" />
              <g transform="translate(14,16)">
                <circle cx="28" cy="12" r="6" fill="#ffd166" />
                <path d="M4 56 L20 26 L34 46 L50 20 L60 56 Z" fill="#d0d0d0" />
              </g>
              <polygon points="28,36 40,44 28,52" fill="#ffffff" opacity="0.9" />
            </svg>
          </div>
          {{/if}}

          <!-- Card Body -->
          <div class="card-body p-2">
            <h6 class="card-title mb-1 text-truncate" title="{{title}}">{{title}}</h6>
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex flex-wrap gap-1 align-items-center flex-grow-1 min-w-0">
                {{#if category}}
                <span class="badge category-{{category}} small text-truncate">{{category}}</span>
                {{/if}}
                <span class="badge rating-{{rating}} small">{{#if rating}}{{rating}}{{else}}PG18{{/if}}</span>
              </div>
              <div class="d-flex flex-column align-items-end">
                <small class="text-muted">{{releaseYear}}</small>
                {{#if length}}<small class="text-muted text-nowrap">{{length}} min</small>{{/if}}
              </div>
            </div>
          </div>

        </div>
      </a>
    </div>
    {{/each}}
  </div>

  <!-- Pagination -->
  <nav aria-label="Movies pagination" class="mt-4">
    <ul class="pagination justify-content-center">
      <li class="page-item {{#ifEquals page 1}}disabled{{/ifEquals}}">
        {{#ifEquals page 1}}<span class="page-link">Previous</span>{{else}}
        <a class="page-link"
          href="?search={{search}}&category={{category}}&sort={{sort}}&page={{subtract page 1}}">Previous</a>{{/ifEquals}}
      </li>

      {{#each (range 1 totalPages)}}
      <li class="page-item {{#ifEquals ../page this}}active{{/ifEquals}}">
        {{#ifEquals ../page this}}
        <span class="page-link" aria-current="page">{{this}}<span class="visually-hidden">(current)</span></span>
        {{else}}
        <a class="page-link"
          href="?search={{../search}}&category={{../category}}&sort={{../sort}}&page={{this}}">{{this}}</a>
        {{/ifEquals}}
      </li>
      {{/each}}

      <li class="page-item {{#ifEquals page totalPages}}disabled{{/ifEquals}}">
        {{#ifEquals page totalPages}}<span class="page-link">Next</span>{{else}}
        <a class="page-link"
          href="?search={{search}}&category={{category}}&sort={{sort}}&page={{add page 1}}">Next</a>{{/ifEquals}}
      </li>
    </ul>
  </nav>
</div>