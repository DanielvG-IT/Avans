<section role="alert" aria-labelledby="error-title" aria-describedby="error-desc"
    class="d-flex align-items-center justify-content-center min-vh-60 py-5" style="background:none; color:white;">

    <div class="position-relative w-100" style="max-width:700px;">
        <!-- Gradient Background -->
        <div class="position-absolute inset-0" style="z-index:0;
            background: radial-gradient(800px 300px at 10% 20%, rgba(233,9,20,0.08), transparent 6%),
                        radial-gradient(600px 240px at 90% 80%, rgba(255,255,255,0.02), transparent 10%),
                        linear-gradient(180deg, rgba(255,255,255,0.01), transparent);
            filter: blur(32px) saturate(110%);"></div>

        <!-- Content -->
        <div class="position-relative z-1 bg-dark bg-opacity-25 rounded-3 p-4 shadow"
            style="backdrop-filter: blur(6px) saturate(120%); border:1px solid rgba(255,255,255,0.03);">

            <header class="mb-3">
                <h1 class="d-flex align-items-baseline gap-2">
                    <span class="text-danger fw-bold fs-3" style="text-shadow: 0 2px 18px rgba(229,9,20,0.18);">
                        {{error.statusCode}}
                    </span>
                    <span class="text-secondary fs-6 fw-semibold">
                        {{#if error.title}}{{error.title}}{{else}}Something went wrong{{/if}}
                    </span>
                </h1>
                <p id="error-desc" class="lead text-secondary">
                    {{#if error.message}}{{error.message}}{{else}}We couldn't find what you're looking for. Try again or
                    browse something you'll love.{{/if}}
                </p>
            </header>

            <div class="d-flex flex-wrap gap-2">
                <a href="/" class="btn btn-primary d-inline-flex align-items-center gap-2">
                    Go Home
                </a>
                <button id="retryBtn" class="btn btn-outline-light d-inline-flex align-items-center gap-2">
                    Try Again
                </button>
                {{#if supportEmail}}
                <a href="mailto:{{error.supportEmail}}?subject=Error%20{{error.statusCode}}"
                    class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    Contact Support
                </a>
                {{/if}}
            </div>
        </div>
    </div>

    <script>
        const retryBtn = document.getElementById('retryBtn');
        if (retryBtn) {
            retryBtn.addEventListener('click', () => {
                retryBtn.disabled = true;
                retryBtn.textContent = 'Retrying...';
                setTimeout(() => location.reload(), 450);
            });
        }
    </script>
</section>